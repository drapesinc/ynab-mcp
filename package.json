{
  "name": "@jyoansah/ynab-mcp",
  "version": "1.0.0",
  "description": "YNAB MCP server with multi-token, multi-budget, multi-account support",
  "author": "Yaw Owusu-Ansah <jyoansah@gmail.com>",
  "type": "module",
  "bin": {
    "ynab-mcp": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jyoansah/ynab-mcp.git"
  },
  "keywords": [
    "ynab",
    "mcp",
    "model-context-protocol",
    "budget",
    "finance",
    "ai"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "debug": "npm run build && npx @modelcontextprotocol/inspector dist/index.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/axios": "^0.14.4",
    "axios": "^1.8.4",
    "commander": "^14.0.1",
    "ynab": "^2.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
